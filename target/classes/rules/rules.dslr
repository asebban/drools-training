package rules;

import ma.medtech.drools.model.Person;

rule "Eligibilité très bonne"
when
    La personne a un âge supérieur à 25 et un revenu supérieur à 30000 et est employée
then
    Attribuer un score de 90
    Afficher le score
end

rule "Eligibilité moyenne"
when
    La personne a un âge inférieur à 18 et est non employée
then
    Attribuer un score de 60
    Afficher le score
end

package rules

import ma.medtech.drools.model.Client

rule "Étape 1 : valider client"
salience 10
when
  $c : Client(valid == false)
then
  System.out.println("[R1] Validation du client");
  $c.setValid(true);
  update($c);
end

rule "Étape 2 : envoyer email"
salience 100
when
  $c : Client(valid == true)
then
  System.out.println("[R2] Envoi de l’email de bienvenue");
end


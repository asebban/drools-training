package rules

import ma.medtech.drools.model.Person;

rule "Alerte senior"
when
  $p : Person(age >= 65)
then
  System.out.println("Senior detected : " + $p.getName());
end

rule "Young man"
when
  $p : Person(age < 30)
then
  System.out.println("Young man detected : " + $p.getName());
end

rule "Adult man"
when
  $p : Person(age < 65, age >= 30)
then
  System.out.println("Adult man detected : " + $p.getName());
end

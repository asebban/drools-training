package rules

import ma.medtech.drools.model.Customer;

rule "Eligible si revenu > 3000 et âge > 25"
when
    $c : Customer(age > 25, income > 3000)
then
    $c.setEligible(true);
    update($c);
    System.out.println("Client " + $c.getName() + " est éligible");
end

rule "Non éligible par défaut"
salience -10
when
    $c : Customer(eligible == false)
then
    System.out.println("Client " + $c.getName() + " n'est pas éligible");
end

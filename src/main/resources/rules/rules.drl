package rules

import ma.medtech.drools.model.Product;

rule "R1"
activation-group "discounts"
lock-on-active true
when
  $p : Product(price > 100)
then
  $p.setDiscount(20);
  System.out.println("[R1] Purshase of more than 100.0 -> Discount applied: " + $p.getDiscount());
  update($p);
end

rule "R2"
activation-group "discounts"
lock-on-active true
when
  $p : Product(discount > 10)
then
  $p.setPrice($p.getPrice() - 30);
  System.out.println("[R2] Discount more than 10.0 -> Price updated: " + $p.getPrice());
  update($p);
end

